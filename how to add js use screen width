<script>  
  /////////////////// slider /////////////////////
  $(document).ready(function(){
  
    var width = $(window).width();
    
    
    
    if (width < 590){
     
          $('.product-single__photos').slick({
      
      
  dots: true,
  infinite: true,
  speed: 300,
  slidesToShow: 1,
  arrows: false,
  adaptiveHeight: true
});
      
    }
    
    
    

       
    
    });
  
</script>
